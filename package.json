{
  "name": "@martin_hotell/schematics",
  "version": "0.0.2",
  "description": "Angular CLI schematics with better defaults",
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "prebuilt": "yarn verify",
    "build": "tsc",
    "test": "tsc && jasmine src/**/*_spec.js",
    "format": "prettier src/**/*.{ts,js,json,md,scss,less,css} --config .prettierrc --write",
    "lint": "tslint --project tsconfig.json --format codeFrame --fix",
    "style": "yarn format && yarn lint",
    "verify": "yarn format -l && yarn lint && yarn test",
    "cz": "git-cz",
    "prerelease": "yarn build",
    "release": "standard-version",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "prepush": "yarn verify"
  },
  "keywords": [
    "schematics"
  ],
  "author": "Martin Hochel <hochelmartin@gmail.com>",
  "license": "MIT",
  "schematics": "./src/collection.json",
  "repository": "git@github.com:Hotell/ng-cli-schematics.git",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "header-max-length": [2, "always", 100]
    }
  },
  "lint-staged": {
    "{src}/**/*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "git add"
    ],
    "src/**/*.{ts,js,json,md,scss,less,css}": [
      "prettier --write --config .prettierrc",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/core": "0.4.5",
    "@angular-devkit/schematics": "0.4.5",
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "@types/jasmine": "2.8.6",
    "@types/node": "~8.9.5",
    "commitizen": "2.9.6",
    "husky": "0.14.3",
    "jasmine": "3.1.0",
    "lint-staged": "7.0.0",
    "prettier": "1.11.1",
    "standard-version": "4.3.0",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.10.0",
    "tslint-config-standard": "7.0.0",
    "typescript": "2.7.2"
  }
}
