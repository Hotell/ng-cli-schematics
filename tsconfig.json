{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src/",
    // "outDir": "out-tsc",
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "strictFunctionTypes": false,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": [
      "jasmine",
      "node"
    ],
    // @lint rules
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
    // "noUnusedLocals": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/*/files/**/*",
    "src/*/other-files/**/*"
  ]
}
